{
    "manifest_version": 2,
    "name": "File Submission Plugin",
    "version": "0.2",
    "description": "Inject buttons",
    "author": "Graham Smale",
    "content_scripts": [{
        "matches": ["https://chat.openai.com/*"],
        "js": [
            "docToText.js",
            "content.js"
        ],
        "run_at": "document_end"
    }],
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "unlimitedstorage",
        "fileSystem",
        "file://*/*"
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_icon": "/images/icon16.png"
    }
}